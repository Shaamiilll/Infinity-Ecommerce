<title>Order Details</title>
<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 20px;
        padding: 0;
        background-color: #f4f4f4;
    }

    header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 10px;
    }

    section {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    h1,
    h2,
    p {
        margin: 0;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    h2 {
        font-size: 20px;
        color: #333;
        margin-bottom: 15px;
    }

    p {
        font-size: 16px;
        color: #555;
        margin-bottom: 10px;
    }

    a {
        display: inline-block;
        padding: 10px 15px;
        background-color: #131921;
        color: #131921;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    

    .product-image {
        max-width: 100%;
        border-radius: 5px;
        margin-bottom: 15px;
    }


    .otp-field {
        flex-direction: row;
        column-gap: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .otp-field input {
        height: 45px;
        width: 42px;
        border-radius: 6px;
        outline: none;
        font-size: 1.125rem;
        text-align: center;
        border: 1px solid #ddd;
    }

    .otp-field input:focus {
        box-shadow: 0 1px 0 rgba(0, 0, 0, 0.1);
    }

    .otp-field input::-webkit-inner-spin-button,
    .otp-field input::-webkit-outer-spin-button {
        display: none;
    }

    /* Resend Link Style */
    .resend {
        font-size: 12px;
    }

    /* Footer Styles */
    .footer {
        position: absolute;
        bottom: 10px;
        right: 10px;
        color: black;
        font-size: 12px;
        text-align: right;
        font-family: monospace;
    }

    .footer a {
        color: black;
        text-decoration: none;
    }
</style>



<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'>

<section class="container-fluid bg-body-tertiary d-block" style="height: 100vh;">
    <div class="row justify-content-center " style="display: flex; align-content: center;">
        <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px;  margin-top: 100px;">
            <div class="card bg-white mb-1 mt-5 border-0"
                style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.02); display: flex; align-items: center;">
                <div class="card-body p-5 text-center">
                    <!-- Product Image -->
                    <!-- Header -->
                    <h4>Order Details</h4>
                    <!-- Order Information -->
                    <p style="color: rgb(134, 3, 3);">Order Id: <%= data._id %>
                    </p>
                    <img src="primg/<%= data.products[0].prd_images[0] %>" alt="Product Image" class="product-image"
                        style="width: 40%;">

                    <p><strong>Product Name:</strong>
                        <%= data.products[0].pname %>
                    </p>
                    <p><strong>Product Price:</strong>
                        <%= data.products[0].price %>
                    </p>
                    <p><strong>Product Category:</strong>
                        <%= data.products[0].category %>
                    </p>
                    <p><strong>Username: </strong>
                        <%= data.user %>
                    </p>

                    <!-- Order Status -->
                    <% if (data.status === 'pending') { %>
                        <a href="/change-status?status=pending&id=<%= data._id %>"
                            style="text-decoration: none; font-weight: 500; color: #f4f4f4;">Mark as Shipped</a>
                    <% } else if (data.status === 'shipped') { %>
                        <a href="/change-status?status=shipped&id=<%= data._id %>"
                            style="text-decoration: none; font-weight: 500;color: #f4f4f4">Mark as Delivered</a>
                    <% } else if (data.status === 'delivered') { %>
                       
                        <span style="font-weight: 500; color: #28a745;">✓ Delivered</span>
                    <% } else if (data.status === 'cancelled') { %>
                        <span style="font-weight: 500; color: #dc3545;">✗ Cancelled</span>
                    <% } else { %>
                        
                        <span style="font-weight: 500; color: #28a745;">✓ Delivered</span>
                        
                    <% } %>
                </div>

                <a href="/admin-order" class="btn  mt-3">Back to Admin Dashboard</a>
            </div>
        </div>
    </div>
</section>