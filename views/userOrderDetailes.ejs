<%- include('include/_header.ejs') %>
<title>Order Details</title>




<link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'>

<section class="container-fluid bg-body-tertiary d-block" style="height: 100vh;">
    <div class="row justify-content-center " style="display: flex; align-content: center;">
        <div class="col-12 col-md-6 col-lg-4" style="min-width: 500px;  margin-top: 100px;">
            <div class="card bg-white mb-1 mt-5 border-0"
                style="box-shadow: 0 12px 15px rgba(0, 0, 0, 0.3); display: flex; align-items: center;">
                <div class="card-body p-5 text-center">
                    
                    <h4>Order Details</h4>
                   
                    <p style="color: rgb(134, 3, 3);">Order Id: <%= data._id %>
                    </p>
                    <img src="/primg/<%= data.products[0].prd_images[0] %>" alt="Product Image" class="product-image"
                    style="width: 40%;">

                    <p><strong>Product Name:</strong>
                        <%= data.products[0].pname %>
                    </p>
                    <p><strong>Product Price:</strong>
                        <%= data.products[0].price %>
                    </p>
                    <p><strong>Product Category:</strong>
                        <%= data.products[0].category %>
                    </p>
                    <p><strong>Username: </strong>
                        <%= data.user %>
                    </p>

                    <!-- Order Status -->
                    <% if (data.status === 'pending') { %>
                       <button  style="text-decoration: none; font-weight: 500; color: #f4f4f4;">pending</button>
                        
                    <% } else if (data.status === 'shipped') { %>
                        <button  style="text-decoration: none; font-weight: 500; color: #f4f4f4;">Shipped</button>

                    <% } else if (data.status === 'delivered') { %>
                        <span style="font-weight: 500; color: #28a745;">✓ Delivered</span>
                    <% } else if (data.status === 'cancelled') { %>
                        <span style="font-weight: 500; color: #dc3545;">✗ Cancelled</span>
                        <% } else if (data.status === 'shipped') { %>
                            <span style="font-weight: 500; color: #28a745;">✓ Shipped</span>
                            <% } else if (data.status === 'pending') { %>
                                <span style="font-weight: 500; color: #28a745;">Pending</span>
                                <% } else if (data.status === 'returned') { %>
                                    <span style="font-weight: 500; color: #dc3545;">✗ Returned</span>
                        <% } else { %>
                        <span style="font-weight: 500; color: #28a745;">✓ Delivered</span>
                    <% } %>
                </div>

           
            </div>
        </div>
    </div>
</section>
<%- include('include/_footer.ejs') %>