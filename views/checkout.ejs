<body>
  <!-- include header -->
  <%- include('include/_header') %>
    <!-- /include header -->
    <section class=" py-5" style="background-color:#f5f5f7;">
      <div class="container" style="background-color:#f5f5f7;">
        <div class="row">
          <div class="col-xl-8 col-lg-8 mb-4">
            <div class="card shadow-0 ">
              <div class="p-4" style="background-color:#f5f5f7;">
                <h5 class="card-title mb-3">checkout</h5>
                <div class="row">
                  <form id="checkout-form">
                    <% var updateprice=`${Number(price)+40-(60)}` %>
                      <div class="col-6">
                        <p class="mb-0">Full name</p>
                        <div class="form-outline">
                          <input name="name" type="text" id="typeText" value="  <%=users.name%>" class="form-control"
                            required />
                        </div>
                      </div>

                      <div class="col-6 mb-3">
                        <p class="mb-0">Phone</p>
                        <div class="form-outline">
                          <input type="number" name="phone" id="typePhone" value="<%=users.phone%>" class="form-control"
                            required />
                        </div>
                      </div>
                      <input type="hidden" name="prId" value="<%=prId  %>">
                      <div class="col-6 mb-3">
                        <p class="mb-0">Email</p>
                        <div class="form-outline">
                          <input type="email" id="typeEmail" value="  <%=users.email%>" name="email"
                            class="form-control" required />
                        </div>
                      </div>
                </div>

                <% if(users.address.length!=0){ %>
                  <div class="row">
                    <div class="col-sm-8 mb-3">
                      <p class="mb-0">Address</p>
                      <div class="form-outline">
                        <input type="text" id="typeText" placeholder="Type here" name="address"
                          value="  <%=users.address[a].Address%>" class="form-control" required />
                      </div>
                    </div>

                    <div class="col-sm-4 mb-3">
                      <p class="mb-0">City</p>
                      <div class="form-outline">
                        <input type="text" id="typeText" value="  <%=users.address[a].City%>" name="city"
                          placeholder="city" class="form-control" required />
                      </div>
                    </div>

                    <div class="col-sm-4 mb-3">
                      <p class="mb-0">House NO.</p>
                      <div class="form-outline">
                        <input name="houseNo" type="text" id="typeText" placeholder="Type here"
                          value=" <%=users.address[a].House_No%>" class="form-control" required />
                      </div>
                    </div>

                    <div class="col-sm-4 col-6 mb-3">
                      <p class="mb-0">Postal code</p>
                      <div class="form-outline">
                        <input type="text" id="typeText" name="postalCode" class="form-control"
                          value=" <%=users.address[a].postcode%>" required />
                      </div>
                    </div>

                    <div class="col-sm-4 col-6 mb-3">
                      <p class="mb-0">Alternate Number</p>
                      <div class="form-outline">
                        <input type="text" id="typeText" name="alternateNumber" class="form-control"
                          value="  <%=users.address[a].altr_number%>" required />
                      </div>
                    </div>
                  </div>
                  <% } else{%>
                    <div class="row">
                      <div class="col-sm-8 mb-3">
                        <p class="mb-0">Address</p>
                        <div class="form-outline">
                          <input type="text" id="typeText" placeholder="Type here" name="address" value=" "
                            class="form-control" required />
                        </div>
                      </div>

                      <div class="col-sm-4 mb-3">
                        <p class="mb-0">City</p>
                        <div class="form-outline">
                          <input type="text" id="typeText" value="" name="city" placeholder="city" class="form-control"
                            required />
                        </div>
                      </div>

                      <div class="col-sm-4 mb-3">
                        <p class="mb-0">House NO.</p>
                        <div class="form-outline">
                          <input name="houseNo" type="number" id="typeText" placeholder="Type here" value=""
                            class="form-control" required />
                        </div>
                      </div>

                      <div class="col-sm-4 col-6 mb-3">
                        <p class="mb-0">Postal code</p>
                        <div class="form-outline">
                          <input type="number" id="typeText" name="postalCode" class="form-control" value="" required />
                        </div>
                      </div>

                      <div class="col-sm-4 col-6 mb-3">
                        <p class="mb-0">Alternate Number</p>
                        <div class="form-outline">
                          <input type="number" id="typeText" name="alternateNumber" class="form-control" value=" "
                            required />
                        </div>
                      </div>
                    </div>
                    <%} %>
                      <div class=" mb-3">
                        <p class="text-dark  mb-5 h">
                          <a href="#" data-bs-toggle="modal" data-bs-target="#changeAddressModal"
                            style="color: #232F3E;text-decoration: underline;">Change Address</a>
                        </p>
                      </div>
                      <div class="mb-3">
                        <h5>Select Payment Method</h5>

                        <!-- Credit Card Payment -->
                        <div class="form-check mb-3">
                          <input class="form-check-input " type="radio" name="payment" id="creditCardPayment"
                            value="Online_Payment">
                          <label class="form-check-label d-flex align-items-center" for="creditCardPayment">
                            Online Payment
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="payment" id="payment2" value="COD">
                          <label class="form-check-label d-flex align-items-center" for="payment2">
                            Cash On Delivery (COD)
                          </label>
                        </div>
                      </div>

                      <div class="float-end">
                        <div class="container">
                          <div class="row">


                            <input type="text" id="totalsum" hidden name="totalsum" value="<%=updateprice%>">
                            <button type="submit" class="btn shadow-0 border"
                              style="color: antiquewhite; background-color: #232F3E;">Continue</button>
                          </div>
                        </div>
                        </form>
                      </div>
              </div>
            </div>
            <!-- Checkout -->
          </div>
          <div class="col-xl-4 col-lg-4 d-flex justify-content-center justify-content-lg-end">
            <div class="ms-lg-4 mt-4 mt-lg-0" style="max-width: 320px;">
              <h6 class="mb-3">Summary</h6>
              <div class="d-flex justify-content-between">
                <p class="mb-2">Total price:</p>
                <p class="mb-2">₹<%= price %>
                </p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="mb-2">Discount:</p>
                <p class="mb-2 text-danger">- ₹60.00</p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="mb-2" style="display: none;" id="co">Coupon Code:</p>
                <p class="mb-2 text-success" id="couponDis"></p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="mb-2">Shipping cost:</p>
                <p class="mb-2">+ ₹40.00</p>

              </div>
              <div class="d-flex justify-content-between">
                <p id="coupon" style="color: red;"></p>

              </div>
              <hr />
              <div class="d-flex justify-content-between">
                <p class="mb-2">Total price:</p>
                <p class="mb-2 fw-bold" id="updatedPrice">₹<%= updateprice%>
                </p>
              </div>

              <div class="input-group mt-3 mb-4">

                <form id="promo-code-form">

                  <input type="number" hidden id="price1" value="<%= updateprice  %>" name="totalsum">

                  <input type="text" class="form-control border" name="coupon" id="coupon-input"
                    placeholder="Promo code" />

                  <h1></h1>

                  <button type="button" class="btn btn-light text-primary border"
                    onclick="applyPromoCode()">Apply</button>
                </form>
              </div>
              <div class="input-group mt-3 mb-4">
                <form id="promo-code-form">


                  <!-- Replace the input field with a checkbox -->
                  <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="wallet-checkbox" onclick="applyWallet()">
                    <label class="form-check-label" for="wallet-checkbox">Use Wallet Amount</label>
                  </div>

                  <h1></h1>

                  <p id="wal" class="text-success text-end">₹ <%= users.wallet %> Available in Wallet</p>

                </form>
              </div>



            </div>
          </div>
        </div>
      </div>
    </section>

    <body>
    </body>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
    <div class="modal fade" id="changeAddressModal" tabindex="-1" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel" style="text-decoration:dotted;">Change Address
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <!-- Add your list of addresses or form for changing addresses here -->
            <% for (let i=0; i < users.address.length; i++) { %>
              <p>Address <%= i + 1 %>: <%=users.address[i].City%>,<%=users.address[i].House_No%>

                      <%=users.address[i].postcode%>
                        <form action="/checkout/address?id=<%= i %>" method="post">
                          <input type="text" value="<%=price %>" hidden name="totalsum">
                          <button type="submit" class="btn btn-primary">Select</button>
                        </form>
              </p>
              <% } %>
                <p><a href="/Add-address/checkout">Add new Address</a></p>
                <!-- Add form or additional content for changing addresses -->
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <!-- Add additional buttons or actions as needed -->
          </div>
        </div>
      </div>
    </div>
    <!-- include footer -->
    <%- include('include/_footer') %>
      <!-- include footer -->
</body>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>

  $("#checkout-form").submit((e) => {
  e.preventDefault();
  
  $.ajax({
    url: `/submit-order?prId=${'<%=prId%>'}`,
    method: 'post',
    data: $('#checkout-form').serialize(),

    success: (response) => {
      // Always redirect to the URL if it exists
      if (response.url) {
        return window.location.href = response.url;
      }

      // If there's no URL, proceed with razorpayPayment
      razorpayPayment(response);
    },

    error: (error) => {
      // Handle any errors here
      console.error('An error occurred:', error);
    }
  });
});

  function razorpayPayment(order) {
    var options = {
      "key": "rzp_test_JrHZi49O6mvXnR",
      "amount": order.amount,
      "currency": "INR",
      "name": "infinity",
      "description": "Test Transaction",
      "image": "",
      "order_id": order.razorpay_order_id,
      "handler": function (response) {
        $.ajax({
          url: `/payment-verified?prId${'<%=prId%>'}`,
          method: 'post',
          data: {
            order: order,
            paymentResponse: response
          },
          success: (response) => {
            window.location.href = response
          }
        });
      },
      "prefill": {
        "name": "",
        "email": "",
        "contact": "9000090000"
      },
      "notes": {
        "address": "Razorpay Corporate Office"
      },
      "theme": {
        "color": "#232F3E;"
      }
    };
    var rzp = new Razorpay(options);
    rzp.open();
  }
</script>
<script>
  function applyPromoCode() {


    var promoCode = document.getElementById('coupon-input').value;
    var totalsum = document.getElementById('updatedPrice').innerText;
    var totalsum1 = document.getElementById('price1').value;




    $.ajax({
      url: '/apply-promo',
      method: 'post',
      data: { coupon: promoCode, price: totalsum1 },
      success: function (response) {
        if (response.success) {

          document.getElementById('coupon').innerText = ""
          document.getElementById('couponDis').innerText = '-' + response.discountPercent + '%'
          document.getElementById('co').style.display = "block"
          document.getElementById("updatedPrice").innerText = response.discount
          document.getElementById('price1').value = response.discount
          document.getElementById('totalsum').value = response.discount


          // document.getElementById("price1").innerText = totalsum - (totalsum / 100) * response.discountPercent

          const Toast = Swal.mixin({
            toast: true,
            position: "top-end",
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
              toast.onmouseenter = Swal.stopTimer;
              toast.onmouseleave = Swal.resumeTimer;
            }
          });
          Toast.fire({
            icon: "success",
            title: "Coupon Code Applied Succesfully"
          });



        } else {
          Swal.fire({
            icon: "error",
            title: "Oops...",
            text: response.message,
          });

        }
      },
      error: function () {
        alert('Error applying promo code. Please try again.');

      }
    });
  }
  document.addEventListener('contextmenu', function (e) {
    e.preventDefault();
  });

  function applyWallet() {

    var isWalletUsed = document.getElementById('wallet-checkbox').checked;
    let price = document.getElementById('price1').value

    if (isWalletUsed) {

      $.ajax({
        url: '/apply-wallet',
        method: 'post',
        data: { price: price },
        success: function (response) {
          
          if (response.success) {
            const Toast = Swal.mixin({
              toast: true,
              position: "top-end",
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
              didOpen: (toast) => {
                toast.onmouseenter = Swal.stopTimer;
                toast.onmouseleave = Swal.resumeTimer;
              }
            });
            Toast.fire({
              icon: "success",
              title: "Withdrawed The Amount From the Wallet"
            });
            document.getElementById("updatedPrice").innerText =response.price;
            document.getElementById("price1").value = '<%=updateprice%>' - response.walletAmount;
         document.getElementById("wal").innerHTML = `  ${response.walletPrice.toLocaleString('en-IN', {
    style: 'currency',
    currency: 'INR'
})} Available in Wallet`
        
            if(response.price==0){
              document.getElementById("creditCardPayment").disabled=true
            }


          } else {
            document.getElementById('coupon').innerText = response.message;
          }
        },
        error: function () {
          alert('Error applying wallet. Please try again.');
        }
      });
    } else {
      // Handle the case where the checkbox is not checked (optional)
      // You might want to update the UI or perform other actions

      Swal.fire({
        title: "Adding Money Back to wallet ",
        icon: "success"
      });
      window.location.reload()
    }
  }

  document.addEventListener('contextmenu', function (e) {
    e.preventDefault();
  });
</script>


</html>