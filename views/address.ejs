    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel="icon" type="image/x-icon" href="images/fav.png">


        <!-- Add Bootstrap JavaScript library -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />



    </head>

    <body>
        <section class="vh-100 " style="background-color: rgb(255,255,255);" <div
            class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5" style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
                                <h2 class="text-uppercase text-center mb-1 h"
                                    style="color: #777777; font-weight: bold; font-size: 20px;">Addresses</h2>

                                <p class="text-dark text-center mb-5 h"><a href="/account-details/?email=<%= email %>"
                                        style="color: #232F3E; text-decoration: underline;">Return to account
                                        Details</a></p>

                                <div class="d-flex justify-content-center">
                                    <a href="/Add-address"><button type="submit" class="btn btn-success "
                                            style="background-color: #232F3E; color: aliceblue; box-shadow: none; width: 100%; border-radius: 30px; height: 40Px">Add
                                            New Address</button> </a>
                                </div>

                                <p class="text-dark text-center mb-5 h">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#changeAddressModal"
                                        style="color: #232F3E;text-decoration: underline;">Change Address</a>
                                </p>




                                <!-- Modal for Changing Addresses -->
                                <div class="modal fade" id="changeAddressModal" tabindex="-1"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel"
                                                    style="text-decoration:dotted;">Change Address</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <!-- Add your list of addresses or form for changing addresses here -->
                                                <% for (let i=0; i < users[0].address.length; i++) { %>
                                                    <p>Address <%= i + 1 %>: <%=users[0].address[i].locality%>,
                                                                <%=users[0].address[i].district%>,
                                                                    <%=users[0].address[i].country%>,
                                                                        <%=users[0].address[i].postcode%> &nbsp;&nbsp;
                                                                            <a
                                                                                href="/account/address?id=<%= i %>">select</a>
                                                    </p>

                                                    <% } %>

                                                        <!-- Add form or additional content for changing addresses -->
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                                <!-- Add additional buttons or actions as needed -->
                                            </div>
                                        </div>
                                    </div>
                                </div>







                                <% if (users && users.length> 0 && users[0].address && users[0].address.length > 0) { %>
                                    <p>Address(Default)</p>
                                    <p><a style="color: #232F3E;"></a>Address: <%=users[0].address[a].Address%>
                                    </p>
                                    <p><a style="color: #232F3E;"></a>City : <%=users[0].address[a].City%>
                                    </p>
                                    <p><a style="color: #232F3E;"></a>House No : <%=users[0].address[a].House_No%>
                                    </p>
                                    <p><a style="color: #232F3E;"></a>State : <%=users[0].address[a].State%>
                                    </p>

                                    <p><a style="color: #232F3E;"></a>Alternate Number :
                                        <%=users[0].address[a].altr_number%>
                                    </p>
                                    <p><a style="color: #232F3E;"></a>postcode :
                                        <%=users[0].address[a].postcode%>
                                    </p>
                                    <% } else { %>
                                        <p>No addresses found. <a href="/Add-address">Add a new address</a></p>
                                        <% } %>
                                            <!-- Modal for Delete Confirmation -->
                                            <div class="modal fade" id="deleteConfirmationModal" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Confirm
                                                                Deletion</h5>
                                                            <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure you want to delete this address?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Cancel</button>
                                                            <a href="/delete-address?id=<%=users[0].address[a]._id%>"><button
                                                                    type="button" class="btn btn-danger" ">Delete</button></a>
          
        </div>
      </div>
    </div>
  </div>
  


                                <a href="" class=" btn btn-light border px-2 pt-2 icon-hover" style="margin-right: 3%;"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#deleteConfirmationModal">
                                                                    <i
                                                                        class="fas fa-trash fa-lg text-secondary px-1"></i>
                                                            </a>

                                                            <a href="/update-address/?id=<%=users[0].address[a]._id%>"
                                                                class="btn btn-light border px-2 pt-2 icon-hover"
                                                                style="margin-right: 3%;"><i
                                                                    class="fas fa-edit fa-lg text-secondary px-1"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                            </div>
                        </div>
        </section>
    </body>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>

    </html>
    <script>
        function setDefaultAddress(index) {
            // Set the selected address as the default
            // For example, you can update the content of the default address on the page
            document.getElementById('defaultAddress').innerHTML = `
        locality: ${users[0].address[index].locality}<br>
        district: ${users[0].address[index].district}<br>
        country: ${users[0].address[index].country}<br>
        postcode: ${users[0].address[index].postcode}
      `;

            // Close the modal
            $('#changeAddressModal').modal('hide');
        }
    </script>

    <script>
        function deleteAddress(id) {

            $('#deleteConfirmationModal').modal('hide');
        }
    </script>


